<% layout("/layouts/boilerplate") %>
<h3>All Listings</h3>

<div class="container">
  <div class="row">
    <% allListings.forEach(listing => { %>
      <div class="col-md-4 mb-4">
        <div class="card" style="width: 100%;">
          <!-- Reference the image from the public/images folder -->
          <img src="/images/<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">Price: <%= listing.price %></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Listing</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>